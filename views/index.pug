    each post in posts
        .card.mb-4
            .card-body
                h2.card-title.text-start #{post.title} 
                p.text-end.text-muted By #{post.author}
                p.card-text #{post.content}
                a.btn.btn-primary(href=`/edit/${post.id}`) Editar
                //- Like and Danger icons
                .d-flex.justify-content-start.mb-3
                button.btn.btn-outline-primary.me-2
                    i.bi.bi-hand-thumbs-up
                    |  Thumbs Up
                button.btn.btn-outline-danger
                    i.bi.bi-hand-thumbs-down
                    |  Danger
                //- Comment section
                .mb-3
                input.form-control(type="text", placeholder="Add a comment")
                button.btn.btn-primary.mt-2 Submit

                //- Comments
                each comments in post.comments
                    
                    .border-top.pt-3
                    p
                        strong Comment-Author: #{comments.text}
                    button.btn.btn-outline-primary.me-2
                        i.bi.bi-hand-thumbs-up
                    button.btn.btn-outline-danger
                        i.bi.bi-hand-thumbs-down